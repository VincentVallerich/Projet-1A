<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/adapter_profilimg_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/adapter_taskimg_icon_size"
        android:maxWidth="@dimen/adapter_taskimg_icon_size"
        android:minHeight="@dimen/adapter_taskimg_icon_size"
        android:minWidth="@dimen/adapter_taskimg_icon_size"
        android:layout_marginLeft="@dimen/adapter_taskimg_icon_margin"
        android:layout_marginRight="@dimen/adapter_taskimg_icon_margin"
        android:layout_marginTop="@dimen/adapter_taskimg_icon_margin"
        android:layout_marginBottom="@dimen/adapter_taskimg_icon_margin"
        android:src="@drawable/add_ico"
        />

</LinearLayout>